{
  "permissions": {
    "allow": [
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(ls:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$(uname)\" == \"Darwin\" ]]; then say \"Claude Codeがタスクを完了しました\"; fi"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$(uname)\" == \"Darwin\" ]]; then say \"Claude Codeからの通知があります\"; fi"
          }
        ]
      }
    ]
  }
}
